@model AmbulanceSystem_WebApp.Resources.ResponseAllOrders
@{
    ViewData["Title"] = "ViewOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height: 690px">
    <div class="my-5 w-50 pt-5">
        <h1 class="display-2">View Orders in Details</h1>
    </div>

    <div class="row">
        <div class="col-2">
            <!-- Nav pills -->
            <ul class="nav nav-pills flex-column" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="pill" href="#underProcessingOrders">Under Processing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#finishedOrders">Finished</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#failedOrders">Failed</a>
                </li>
            </ul>
        </div>
        <div class="col-10">
            <!-- Tab panes -->
            <div class="tab-content">
                <div id="underProcessingOrders" class="container tab-pane active">
                    <br>
                    <div class="row">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Paramedic</th>
                                    <th>Creation Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.UnderProcessingOrders)
                                {
                                    <tr>
                                        <td><a href="/Authority/ViewPatient/@order.Request.Patient.Id">@order.Request.Patient.Username</a></td>
                                        <td><a href="/Authority/ViewParamedic/@order.Paramedic.Id">@order.Paramedic.Username</a></td>
                                        <td>@order.CreationDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                </div>

                <div id="finishedOrders" class="container tab-pane fade">
                    <br>
                    <div class="row">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Paramedic</th>
                                    <th>Hospital</th>
                                    <th>Payment Type</th>
                                    <th>Creation Time</th>
                                </tr>                            
                            </thead>
                            <tbody>
                                @foreach (var order in Model.FinishedOrders)
                                {
                                    <tr>
                                        <td><a href="/Authority/ViewPatient/@order.OrderData.Request.Patient.Id">@order.OrderData.Request.Patient.Username</a></td>
                                        <td><a href="/Authority/ViewParamedic/@order.OrderData.Paramedic.Id">@order.OrderData.Paramedic.Username</a></td>
                                        <td>@order.Hospital.Name</td>
                                        <td>@order.Payment.Type</td>
                                        <td>@order.OrderData.CreationDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                </div>

                <div id="failedOrders" class="container tab-pane fade">
                    <br>
                    <div class="row">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Patient</th>
                                    <th>Paramedic</th>
                                    <th>Reason</th>
                                    <th>Creation Time</th>
                                </tr>                            
                            </thead>
                            <tbody>
                                @foreach (var order in Model.FailedOrders)
                                {
                                    <tr>
                                        <td><a href="/Authority/ViewPatient/@order.OrderData.Request.Patient.Id">@order.OrderData.Request.Patient.Username</a></td>
                                        <td><a href="/Authority/ViewParamedic/@order.OrderData.Paramedic.Id">@order.OrderData.Paramedic.Username</a></td>
                                        <td>
                                            <p>@order.FailReason.Reason</p>
                                        </td>
                                        <td>@order.OrderData.CreationDate</td>
                                    </tr>
                                }                                
                            </tbody>
                        </table>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </div>

</div>

