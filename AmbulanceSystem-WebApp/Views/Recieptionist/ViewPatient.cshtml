@model AmbulanceSystem_WebApp.Resources.PatientFullData

@{
    ViewData["Title"] = "View Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="min-height: 690px">
    <div class="my-5 w-50 pt-5">
        <h1 class="display-2">View Patient</h1>
    </div>
    <div class="row">
        <div class="col-2">
            @if (Model.User.ImageUrl != null)
            {
                <img src="@Model.User.ImageUrl" alt="@Model.User.Username" class="img-resposive" />
            }
            else
            {
                <img src="~/lib/assets/images/first-aid-1040283-1920-122x122.png" alt="@Model.User.Username" class="img-resposive" />
            }
            <p class="pt-3 display-7">
                @Model.User.Username
            </p>
        </div>
        <div class="col-10">
            <table class="table table-dark table-striped">
                <tr>
                    <td>National Id: </td>
                    <td>@Model.User.NationalId</td>
                    <td>Birthdate: </td>
                    <td>@Model.Birthdate.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Blood Type: </td>
                    <td>@Model.BloodType</td>
                    <td>Number of Requests: </td>
                    <td>@Model.PatientRequests.Count</td>
                </tr>
                <tr>
                    <td>Email: </td>
                    <td>@Model.User.Email</td>
                    <td>Phone: </td>
                    <td>@Model.User.PhoneNumber</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="mt-3" style="height: 50px"></div>
    <div class="row">
        <div class="col-2">
            <!-- Nav pills -->
            <ul class="nav nav-pills flex-column" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="pill" href="#history">History</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#reports">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#relatives">Relatives</a>
                </li>
            </ul>
        </div>
        <div class="col-10">
            <!-- Tab panes -->
            <div class="tab-content">
                <div id="history" class="container tab-pane active">
                    <br>
                    <h3>History</h3>
                    <p>
                        @Model.History
                    </p>
                </div>
                <div id="reports" class="container tab-pane fade">
                    <br>
                    <h3>Reports</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Hospital</th>
                                <th>Disease Name</th>
                                <th>Chronic Disease</th>
                                <th>Description</th>
                            </tr>                        
                        </thead>
                        <tbody>
                            @foreach (var report in Model.Reports)
                            {
                                <tr>
                                    <td>@report.HospitalName</td>
                                    <td>@report.DiseaseName</td>
                                    <td>@report.IsChronicDisease</td>
                                    <td>@report.Description</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div id="relatives" class="container tab-pane fade">
                    <br>
                    <h3>Relatives</h3>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone Number</th>
                            </tr>                        
                        </thead>
                        <tbody>
                            @foreach (var relative in Model.PatientRelatives)
                            {
                                <tr>
                                    <td>@relative.Name</td>
                                    <td>@relative.PhoneNumber</td>
                                </tr>
                            }                                                       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

